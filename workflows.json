{
  "Start application": {
    "command": "npx tsx scripts/init-db.ts && npm run dev",
    "environment": {
      "NODE_ENV": "development",
      "PORT": "5000"
    },
    "wait_for_port": true,
    "port": 5000,
    "persistent": true,
    "restart_on": [
      "package.json",
      "package-lock.json",
      "client/src/**/*.{ts,tsx}",
      "client/src/**/*.css",
      "client/src/index.css",
      "server/**/*",
      "shared/**/*",
      "drizzle.config.ts",
      ".env"
    ]
  },
  "WordPress Sync": {
    "command": "node scripts/wordpress-api-sync.js",
    "environment": {
      "NODE_ENV": "development",
      "DEBUG": "wordpress-sync:*"
    },
    "persistent": false
  },
  "WordPress Scheduler": {
    "command": "npx tsx scripts/sync-scheduler.ts",
    "environment": {
      "NODE_ENV": "development",
      "DEBUG": "wordpress-sync:*"
    },
    "persistent": true,
    "restart_on": [
      "scripts/sync-scheduler.ts",
      "scripts/wordpress-api-sync.ts"
    ]
  }
}