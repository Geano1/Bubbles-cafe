{
  "Start application": {
    "command": "npm run dev",
    "environment": {
      "NODE_ENV": "development",
      "PORT": "5000"
    },
    "wait_for_port": 5000,
    "persistent": true,
    "restart_on": [
      "package.json",
      "package-lock.json",
      "client/src/**/*",
      "server/**/*",
      "shared/**/*",
      "drizzle.config.ts",
      ".env"
    ]
  }
}