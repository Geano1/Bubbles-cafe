{
  "Start application": {
    "command": "npm run dev",
    "environment": {
      "NODE_ENV": "development"
    },
    "wait_for_port": 3001,
    "persistent": true,
    "restart_on": [
      "package.json",
      "package-lock.json",
      "client/src/**/*",
      "server/**/*",
      "shared/**/*",
      "drizzle.config.ts"
    ]
  }
}