{
  "Start application": {
    "command": "npm run dev",
    "environment": {
      "NODE_ENV": "development",
      "PORT": "3001"
    },
    "wait_for_port": 3001,
    "persistent": true,
    "restart_on": [
      "package.json",
      "package-lock.json",
      "client/src/**/*",
      "server/**/*",
      "shared/**/*",
      "drizzle.config.ts",
      ".env"
    ]
  },
  "Check TypeScript": {
    "command": "tsc --noEmit",
    "environment": {
      "NODE_ENV": "development"
    },
    "persistent": false,
    "restart_on": [
      "client/src/**/*.ts",
      "client/src/**/*.tsx",
      "server/**/*.ts",
      "shared/**/*.ts"
    ]
  }
}