{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "outDir": "dist-server",
    "target": "es2020",
    "isolatedModules": false,
    "noEmit": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}