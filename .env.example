# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Session Security
SESSION_SECRET=your-super-secure-session-secret-here-minimum-32-characters

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Admin Configuration
VANTALISON_ADMIN_PASSWORD=secure-admin-password-here

# External API Keys (if used)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Environment
NODE_ENV=development
PORT=3003

# Client Configuration
CLIENT_URL=http://localhost:5173

# Security
CORS_ORIGIN=http://localhost:5173

# Optional: Redis for session storage (recommended for production)
REDIS_URL=redis://localhost:6379

# Optional: File upload storage
UPLOAD_STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name