# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Server Configuration  
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
SESSION_SECRET=your_session_secret_at_least_32_characters_long
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Gmail Configuration (for email services)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Payment Service Configuration (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# Email Service Configurations
MAILERSEND_API_TOKEN=your_mailersend_api_token
MAILERSEND_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM=noreply@yourdomain.com

# Firebase Configuration (for authentication)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# WordPress API Configuration
VITE_WORDPRESS_API_URL=https://public-api.wordpress.com/wp/v2/sites/your-site.wordpress.com

# Development/Debug Configuration
LOG_LEVEL=debug
VITE_DEBUG_ENABLED=true
VITE_ENABLE_ANALYTICS=false
VITE_CACHE_DURATION=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_ENABLED=false

# Replit Configuration (if running on Replit)
REPL_ID=your_repl_id